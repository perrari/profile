<script>
  // Code for both dropdown menus
  const dropdownButtons = document.querySelectorAll('.relative img');

  dropdownButtons.forEach(button => {
    const hoverImage = button.dataset.hoverImage;
    const dropdownMenu = button.nextElementSibling;

    // Function to toggle dropdown menus
    function toggleDropdown() {
      dropdownMenu.classList.toggle('hidden');
    }

    // Click event listener for both buttons
    button.addEventListener('click', toggleDropdown);

    // Close dropdown when clicking outside (both menus)
    document.addEventListener('click', (event) => {
      if (!event.target.closest('.relative')) {
        const openDropdowns = document.querySelectorAll('.relative .absolute:not(.hidden)');
        openDropdowns.forEach(dropdown => dropdown.classList.add('hidden'));
      }
    });

    // Hover/unhover image changes (both menus)
    button.addEventListener('mouseover', () => {
      button.src = hoverImage;
    });

    button.addEventListener('mouseout', () => {
      button.src = button.src.replace(hoverImage, '/img/prak1.png'); // Replace with actual default image path
    });
  });
</script>
